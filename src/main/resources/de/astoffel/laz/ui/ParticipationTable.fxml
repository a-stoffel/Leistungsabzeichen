<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane prefHeight="200.0" prefWidth="1129.0" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.astoffel.laz.ui.ParticipationController">
	<center>
		<TableView fx:id="table" editable="true" BorderPane.alignment="CENTER">
			<columns>
				<TableColumn fx:id="participantColumn" minWidth="200.0" prefWidth="-1.0" text="Teilnehmer" />
				<TableColumn fx:id="categoryColumn" editable="false" minWidth="200.0" prefWidth="-1.0" text="Kategorie" />
				<TableColumn fx:id="instrumentColumn" maxWidth="200.0" minWidth="200.0" prefWidth="200.0" resizable="false" text="Instrument" />
				<TableColumn fx:id="juryColumn" maxWidth="150.0" minWidth="150.0" prefWidth="150.0" resizable="false" text="Jury" />
			</columns>
			<columnResizePolicy>
				<TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
			</columnResizePolicy>
		</TableView>
	</center>
</BorderPane>
